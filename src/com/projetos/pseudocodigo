Algoritmo "triangulo"

Var
lado1, lado2, lado3: real
tipo: caractere


Inicio

funcao exibirDados()
       escreval("Coloque o primeiro lado: ")
       leia(lado1)

       escreva("Coloque o segundo lado: ")
       leia(lado2)

       escreva("Coloque o terceiro lado: ")
       leia(lado3)

fimfuncao

funcao calcularTriangulo()
       se (lado1 == lado2 && lador2 == lado3) entao
          enquanto(lado1 == lado2 && lador2 == lado3) faca
                         tipo <- "Triangulo Equilatero"
                        escreval("Lado 1: ", lado1,"\n", " Lado 2: ",
                                       lado2,"\n" " Lado 3: ", lado3)
                        escreva("Deseja continuar?")
                        leia(tipo)

                        confirm: inteiro = (tipo)


                        se (confirm == 0) entao
                           enquanto (confirm == 0) faca
                                    exibirDados()
                                    calcularTriangulo()
                                    confirm++
                           fimenquanto
                        fimse
                        se (confirm == 1) entao
                           saida()
                           pare
                        senao
                             saida()
                             pare
                        fimse
          fimenquanto

          senao se (lado1 == lado2 || lado2 == lado3 && lado1 != lado2 || lado1 == lado3) entao
                enquanto(lado1 == lado2 || lado2 == lado3 && lado1 != lado2 || lado1 == lado3) faca
                               tipo <- "Triangulo IsÃ³scele"
                               escreval("Lado 1: ", lado1,"\n", " Lado 2: ",
                                       lado2,"\n" " Lado 3: ", lado3)
                               escreva("Deseja continuar?")
                               leia(tipo)

                               confirm: inteiro = (tipo)

                               se (confirm == 0) entao
                                  enquanto (confirm == 0) faca
                                           exibirDados()
                                           calcularTriangulo()
                                           confirm++
                                  fimenquanto
                               fimse
                               se (confirm == 1) entao
                                  saida()
                                  pare
                               senao
                                    saida()
                                    pare
                               fimse
                fimenquanto

          senao se (lado1 <> lado2 ou lado2 <> lado3 ou lado1 <> lado3) entao
                tipo <- "Triangulo Escaleno"
                escreval("Lado 1: ", lado1,"\n", " Lado 2: ",
                               lado2,"\n" " Lado 3: ", lado3)
                enquanto (lado1 <> lado2 ou lado2 <> lado3 ou lado1 <> lado3) faca
                         escreva("Deseja continuar?")
                         leia(tipo)

                         confirm: inteiro = (tipo)

                         se (confirm == 0) entao
                            enquanto (confirm == 0) faca
                                     exibirDados()
                                     calcularTriangulo()
                                     confirm++
                            fimenquanto
                         fimse
                         se (confirm == 1) entao
                            pare
                         senao
                              saida()
                              pare
                         fimse
                fimenquanto
          fimenquanto
       fimse
fimfuncao

funcao saida()
       escreva("Programa Finalizado")
fimfuncao
